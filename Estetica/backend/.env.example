# Server
PORT=3000

# Prisma / Neon connection strings
# DATABASE_URL must use the Neon connection pooler endpoint and point to estetica_dev
DATABASE_URL="postgresql://<user>:<password>@<host>-pooler.us-east-1.aws.neon.tech/estetica_dev?sslmode=require"
# DIRECT_URL and SHADOW_DATABASE_URL use the direct endpoint (without -pooler)
DIRECT_URL="postgresql://<user>:<password>@<host>.us-east-1.aws.neon.tech/estetica_dev?sslmode=require"
# SHADOW_DATABASE_URL must point to an empty database (estetica_shadow) on the direct endpoint
SHADOW_DATABASE_URL="postgresql://<user>:<password>@<host>.us-east-1.aws.neon.tech/estetica_shadow?sslmode=require"

# Notes:
# - Create estetica_shadow ahead of time in Neon and leave it empty.
# - Keep DIRECT_URL/SHADOW_DATABASE_URL in sync when rotating credentials.

JWT_SECRET=change_me
PUBLIC_LANDING_URL=http://localhost:3001
PUBLIC_DASHBOARD_URL=http://localhost:3003

# Booking capacity (optional, defaults to infinito)
MAX_PARALLEL_BOOKINGS_PER_SLOT=
