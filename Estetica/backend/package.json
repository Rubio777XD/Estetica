{
  "name": "estetica-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset --skip-seed --force",
    "prisma:seed": "prisma db seed",
    "prisma:baseline": "bash prisma/scripts/generate-baseline.sh",
    "prisma:baseline:ps": "pwsh prisma/scripts/generate-baseline.ps1",
    "db:verify": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/db-verify.ts",
    "db:audit": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/db-verify.ts --deep",
    "db:seed:dry": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/db-seed-validate.ts",
    "db:seed:apply": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' prisma/seed.ts",
    "db:smoke": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' scripts/e2e-smoke.ts",
    "audit:db": "npm run db:audit",
    "smoke:e2e": "npm run db:smoke",
    "prebuild": "prisma generate"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.9.2",
    "prisma": "^5.15.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0"
  }
}
